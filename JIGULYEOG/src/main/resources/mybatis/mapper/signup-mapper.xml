<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="mapper.signup">
	<!-- 댓글 insert -->
	<insert id="signInsert" parameterType="SignUpDto">
		INSERT INTO SIGN_UP
		VALUES(SIG_SEQUENCE.NEXTVAL,#{pet_no},#{user_id},#{sig_content},SYSDATE)
	</insert>
	
	<!-- 댓글 list -->
	<select id="sigList" parameterType="int" resultType="SignUpDto">
		SELECT SIG_NO , PET_NO , USER_ID , SIG_CONTENT , SIG_DATE 
		FROM SIGN_UP
		WHERE PET_NO=#{pet_no}
		ORDER BY SIG_NO DESC
	</select>
	
	<select id="signUpOne" parameterType="int" resultType="SignUpDto">
		SELECT *
		FROM SIGN_UP
		WHERE SIG_NO = #{sig_no}
	</select>
	
	<update id="sigUpdate" parameterType="SignUpDto">
		UPDATE SIGN_UP
		SET SIG_CONTENT=#{sig_content}
		WHERE SIG_NO=#{sig_no}
	</update>
	
	<delete id="sigDelete" parameterType="SignUpDto">
		DELETE FROM SIGN_UP
		WHERE SIG_NO = #{sig_no}
	</delete>
	
	<select id="insertChk" parameterType="SignUpDto" resultType="SignUpDto">
		SELECT * 
		FROM SIGN_UP 
		WHERE USER_ID = #{user_id} AND PET_NO=#{pet_no}
	</select>
</mapper>